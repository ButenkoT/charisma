= form_for @product do |f|
  %div
    = f.label :title
    = f.text_field :title, :autofocus => true

  %div
    = f.label :price
    = f.text_field :price

  %div
    = f.label :size
    = f.text_field :size

  %div
    = f.label :description
    = f.text_field :description

  %div
    = f.label :category
    = select_tag 'product[category_ids]', options_from_collection_for_select(Category.all, "id", "name"), :include_blank => true, :multiple => true


  %div
    = f.label :image
    = f.url_field :image

  %label
  = f.submit
