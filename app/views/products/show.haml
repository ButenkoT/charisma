
.show_product_left
  %h2= @product.title

  .product
    = image_tag @product.image

.show_product_right
  %p
    Price:
    = number_to_currency(@product.price)

  %p
    Size:
    = @product.size

  %p
    Description:
    = @product.description

  %p
    Owner:
    = link_to(@product.user.name, @product.user)

  %p
    Category:
    %ul
    - @product.categories.each do |category|
      %li= link_to category.name, category
  
  .inside_product_1 
    - if @current_user && (@product.user.id == @current_user.id)
      .linking_button
        = link_to('Edit', edit_product_path(@product))
      .linking_button
        = link_to('Delete', @product, :method => :delete , :data => {:confirm => 'Are you sure?'})

    - if !@current_user
      = link_to('Buy', login_path)
    -else
      - if @product.user.id != @current_user.id
        .buy
          %button.buy{'data-product' => @product.id, 'data-name'=> @product.title, 'data-price' => @product.price} Buy
    .linking_button
      = link_to('All items', products_path)

.comments
 
  %p
    = @product.comments.count
    Comments:
    %ul
    - @product.comments.each do |comment|
      - if comment.user
        %li
          %b
            = link_to(comment.user.name, comment.user)
          = comment.body

  - if @current_user && (@current_user.id != @product.user.id)

    = form_for ([@product, @product.comments.new]) do |f|
      %div
        = f.label :body
        = f.text_area :body, :cols => "80", :rows => "5", :autofocus => true

      %label
      = f.submit "comment"
    
  