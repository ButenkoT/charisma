

%h2= @product.title

%p
  = image_tag @product.image

%p
  Price:
  = number_to_currency(@product.price)

%p
  Size:
  = @product.size

%p
  Description:
  = @product.description

%p
  Owner:
  = link_to(@product.user.name, @product.user)

%p
  Category:
  %ul
  - @product.categories.each do |category|
    %li= link_to category.name, category
   
- if @current_user && (@product.user.id == @current_user.id)
  %p
    = link_to('Edit', edit_product_path(@product))

  %p
    = link_to('Delete', @product, :method => :delete , :data => {:confirm => 'Are you sure?'})

%p
  = link_to('All products', products_path)


/ = form_for @comment do |f|
/   %div
/     = f.label :comment
/     = f.text_field :comment, :autofocus => true

/   %label
/   = f.submit



%p
  Comments:
  %ul
  - @product.comments.each do |comment|
    %li= link_to comment.user.name, user
    %li= comment.comment