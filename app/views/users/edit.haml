%h2
  Editing
  = @user.name

= form_for @user do |f|
  %div
    = f.label :name
    = f.text_field :name
  %div
    = f.label :email
    = f.email_field :email

  %div
    = f.label :avatar
    = f.url_field :avatar

  %div
    = f.label :status
    = f.text_field :status

  %div
    = f.label :city
    = f.text_field :city

  %div
    = f.label :country
    = f.text_field :country

  = f.submit